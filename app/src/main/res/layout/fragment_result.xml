<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/large_padding"
        android:paddingEnd="@dimen/large_padding"
        android:background="@color/white_background"
        tools:context=".trainingtest.presentation.ui.fragment.ResultFragment">

    <ImageButton
            android:layout_marginTop="@dimen/large_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_left"
            android:minWidth="@dimen/size_image"
            android:minHeight="@dimen/size_image" />

    <com.google.android.material.card.MaterialCardView
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:backgroundTint="#FF8F5E"
            app:cardCornerRadius="20dp"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/large_padding"
                android:paddingBottom="@dimen/medium_padding">

            <TextView
                    android:textSize="@dimen/large_text_size"
                    android:layout_marginTop="@dimen/large_margin"
                    android:textColor="#1B1464"
                    android:gravity="center"
                    android:id="@+id/label_finished"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/test_passed" />

            <TextView
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:id="@+id/label_correct_parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/small_text_size"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/correct_test" />

            <TextView
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/large_text_size"
                    android:id="@+id/tv_correct_count"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/small_margin"
                    android:layout_height="wrap_content"
                    tools:text="6 из 66" />

            <RatingBar
                    android:id="@+id/progress"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    style="@style/CustomRatingBar"
                    android:stepSize="1"
                    android:numStars="5" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <TextView
            android:gravity="center"
            android:id="@+id/label_available"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="@dimen/large_margin"
            android:text="@string/available_test" />

    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="@dimen/small_text_size"
            android:layout_marginTop="@dimen/medium_margin"
            tools:text="Уменьшенные квинты" />

    <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/medium_margin"
            android:textSize="@dimen/small_text_size"
            tools:text="Увеличенные кварты" />
</LinearLayout>